            "Default": "/aws/service/ami-amazon-linux-latest/amzn2-ami-hvm-x86_64-gp2",
            "Description": "Pulls the latest Amazon Linux 2 AMI."
        },
        "PublicSubnet01ID": {
            "Description": "ID of public subnet 1",
            "Type": "AWS::EC2::Subnet::Id"
        },
        "PublicSubnet02ID": {
            "Description": "ID of public subnet 2",
            "Type": "AWS::EC2::Subnet::Id"
        },
        "VolSize": {
            "Type": "Number",
            "Default": 25,
            "MinValue": 20,
            "MaxValue": 16384,
            "Description": "Volume Size (GB) for Amazon linux instance.",
            "ConstraintDescription": "Volume size must be numeric and between 20 and 16384"
        },
        "VpcCIDR": {
            "Type": "String",
            "AllowedPattern": "^(([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.){3}([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])(\\/([0-9]|[1-2][0-9]|3[0-2]))$",
            "Description": "CIDR Block for the VPC"
        },
        "VpcId": {
            "Type": "AWS::EC2::VPC::Id",
            "Description": "ID of your existing VPC"
        }
    },
    "Rules": {
        "SubnetsInVPC": {
            "Assertions": [
                {
                    "Assert": {
                        "Fn::EachMemberIn": [
                            {
                                "Fn::ValueOfAll": [
                                    "AWS::EC2::Subnet::Id",
                                    "VpcId"
                                ]
                            },
                            {
                                "Fn::RefAll": "AWS::EC2::VPC::Id"
                            }
                        ]
                    },
                    "AssertDescription": "All subnets must be in the VPC"
                }
            ]
        }
    },
    "Resources": {
        "ConsulServerInstance":{
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": {
                    "Ref": "LatestAmiId"
                },
                "InstanceType": {
                    "Ref": "InstanceType"
                },
                "SecurityGroupIds": [
                    {
                        "Ref": "ConsulSecurityGroup"
                    }
                ],
                "SubnetId": {
                    "Ref": "PublicSubnet01ID"
                },
                "IamInstanceProfile": {
                    "Ref": "EC2InstanceProfile"
                },
                "BlockDeviceMappings": [
                    {
                        "DeviceName": "/dev/sda1",
                        "Ebs": {
                            "VolumeSize": {
                                "Ref": "VolSize"
                            }
                        }
                    }
                ],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Sub": "${AWS::StackName} - Consul Server"
                        }
                    }
                ],
                "UserData": {
                    "Fn::Base64": {
                        "Fn::Join": [
                            "",
                            [
                                "#!/bin/bash\n",
                                "yum update -y\n",
                                "yum install -y https://s3.amazonaws.com/ec2-downloads-windows/SSMAgent/latest/linux_amd64/amazon-ssm-agent.rpm\n",
                                "systemctl daemon-reload\n",
                                "systemctl restart amazon-ssm-agent\n",
                                "curl -LO https://releases.hashicorp.com/consul/1.6.1/consul_1.6.1_linux_amd64.zip\n",
                                "unzip consul_1.6.1_linux_amd64.zip\n",
                                "mv consul /usr/bin\n",
                                "rm consul_1.6.1_linux_amd64.zip\n",
                                "useradd --system --home /etc/consul.d --shell /bin/false consul\n",
                                "ConsulIP=$(curl -s 'http://169.254.169.254/latest/meta-data/local-ipv4')\n",
                                "mkdir /usr/local/etc/consul\n",
                                "touch /usr/local/etc/consul/consul_s1.json\n",
                                "cd /usr/local/etc/consul\n",
                                "echo '{' >> consul_s1.json\n", 
                                "echo '  \"server\": true,' >> consul_s1.json\n",
                                "echo '  \"node_name\": \"consul_s1\",' >> consul_s1.json\n",
                                "echo '  \"datacenter\": \"dc1\",' >> consul_s1.json\n",
                                "echo '  \"data_dir\": \"/var/consul/data\",' >> consul_s1.json\n",
                                "echo '  \"bind_addr\": \"0.0.0.0\",' >> consul_s1.json\n",
                                "echo '  \"client_addr\": \"0.0.0.0\",' >> consul_s1.json\n",
                                "echo '  \"advertise_addr\": \"'\"$ConsulIP\"'\",' >> consul_s1.json\n",
                                "echo '  \"bootstrap_expect\": 1,' >> consul_s1.json\n",
                                "echo '  \"retry_join\": [\"'\"$ConsulIP\"'\"],' >> consul_s1.json\n",
                                "echo '  \"ui\": true,' >> consul_s1.json\n",
                                "echo '  \"log_level\": \"DEBUG\",' >> consul_s1.json\n",
                                "echo '  \"enable_syslog\": true,' >> consul_s1.json\n",
                                "echo '  \"acl_enforce_version_8\": false' >> consul_s1.json\n",
                                "echo '}' >> consul_s1.json\n",
                                "cd /etc/systemd/system\n",
                                "curl -LO https://raw.githubusercontent.com/cdmadrigal/fun-venafi-samples/master/vault/Vault-Consul-deployment/consul-server/consul.service\n",
                                "systemctl daemon-reload\n",
                                "install -d -o consul -g consul /var/consul/\n",
                                "systemctl start consul"
                            ]
                        ]
                    }
                }
            }
        },
        "VaultServerInstance": {
            "Type": "AWS::EC2::Instance",
            "DependsOn": "ConsulServerInstance",
            "Properties": {
                "ImageId": {
                    "Ref": "LatestAmiId"
                },
                "InstanceType": {
                    "Ref": "InstanceType"
                },
                "SecurityGroupIds": [
                    {
                        "Ref": "VaultSecurityGroup"
                    }
                ],
                "SubnetId": {
                    "Ref": "PublicSubnet02ID"
                },
                "IamInstanceProfile": {
                    "Ref": "EC2InstanceProfile"
                },
                "BlockDeviceMappings": [
                    {
                        "DeviceName": "/dev/sda1",
                        "Ebs": {
                            "VolumeSize": {
                                "Ref": "VolSize"
                            }
                        }
                    }
                ],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Sub": "${AWS::StackName} - Vault Server"
                        }
                    }
                ],
                "UserData": {
                    "Fn::Base64": {
                        "Fn::Join": [
                            "",
                            [
                                "#!/bin/bash\n",
                                "yum update -y\n",
                                "yum install -y https://s3.amazonaws.com/ec2-downloads-windows/SSMAgent/latest/linux_amd64/amazon-ssm-agent.rpm\n",
                                "systemctl daemon-reload\n",
                                "systemctl restart amazon-ssm-agent\n",
                                "curl -LO https://releases.hashicorp.com/vault/1.2.3/vault_1.2.3_linux_amd64.zip\n",
                                "unzip vault_1.2.3_linux_amd64.zip\n",
                                "mv vault /usr/bin\n",
                                "rm vault_1.2.3_linux_amd64.zip\n",
                                "curl -LO https://releases.hashicorp.com/consul/1.6.1/consul_1.6.1_linux_amd64.zip\n",
                                "unzip consul_1.6.1_linux_amd64.zip\n",
                                "mv consul /usr/bin\n",
                                "rm consul_1.6.1_linux_amd64.zip\n",
                                "curl -LO https://github.com/Venafi/vault-pki-backend-venafi/releases/download/v0.5.3/venafi-pki-backend_v0.5.3+650_linux.zip\n",
                                "unzip venafi-pki-backend_v0.5.3+650_linux.zip\n",
                                "mkdir --parents /etc/vault/vault_plugins\n",
                                "useradd --system --home /etc/consul.d --shell /bin/false consul\n",
                                "useradd --system --home /etc/vault.d --shell /bin/false vault\n",
                                "VaultIP=$(curl -s 'http://169.254.169.254/latest/meta-data/local-ipv4')\n",
                                "mkdir /usr/local/etc/consul\n",
                                "touch /usr/local/etc/consul/consul_c1.json\n",
                                "cd /usr/local/etc/consul\n",
                                "echo '{' >> consul_c1.json\n", 
                                "echo '  \"server\": false,' >> consul_c1.json\n",
                                "echo '  \"datacenter\": \"dc1\",' >> consul_c1.json\n",
                                "echo '  \"node_name\": \"consul_c1\",' >> consul_c1.json\n",
                                "echo '  \"data_dir\": \"/var/consul/data\",' >> consul_c1.json\n",
                                "echo '  \"bind_addr\": \"'\"$VaultIP\"'\",' >> consul_c1.json\n",
                                "echo '  \"client_addr\": \"127.0.0.1\",' >> consul_c1.json\n",
                                "echo '  \"retry_join\": [\"",
                                {
                                    "Fn::GetAtt": [
                                        "ConsulServerInstance",
                                        "PrivateIp"
                                    ]
                                },
                                "\"],' >> consul_c1.json\n",
                                "echo '  \"log_level\": \"DEBUG\",' >> consul_c1.json\n",
                                "echo '  \"enable_syslog\": true,' >> consul_c1.json\n",
                                "echo '  \"acl_enforce_version_8\": false' >> consul_c1.json\n",
                                "echo '}' >> consul_c1.json\n",
                                "cd /etc/systemd/system\n",
                                "curl -LO https://raw.githubusercontent.com/cdmadrigal/fun-venafi-samples/master/vault/Vault-Consul-deployment/consul-agent/consul.service\n",
                                "systemctl daemon-reload\n",
                                "install -d -o consul -g consul /var/consul/\n",
                                "systemctl start consul\n",
                                "cd /etc/vault\n",
                                "curl -LO https://raw.githubusercontent.com/cdmadrigal/fun-venafi-samples/master/vault/Vault-Consul-deployment/vault-server/vault_s1.hcl\n",
                                "sed -i \"s+10.1.42.201+$VaultIP+g\" vault_s1.hcl\n",
                                "cd /etc/systemd/system\n",
                                "curl -LO https://raw.githubusercontent.com/cdmadrigal/fun-venafi-samples/master/vault/Vault-Consul-deployment/vault-server/vault.service\n",
                                "export VAULT_ADDR=http://127.0.0.1:8200\n",
                                "systemctl daemon-reload\n",
                                "systemctl start vault\n",
                                "SHA256=$(shasum -a 256 /etc/vault/vault_plugins/venafi-pki-backend| cut -d' ' -f1)\n",
                                "vault write sys/plugins/catalog/secret/venafi-pki-backend sha_256=\"${SHA256}\" command=\"venafi-pki-backend\"\n",
                                "vault secrets enable -path=venafi-pki -plugin-name=venafi-pki-backend plugin"
                            ]
                        ]
                    }
                }
            }
        },
        "ConsulSecurityGroup": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "VpcId": {
                    "Ref": "VpcId"
                },
                "GroupDescription": "Security Group for Consul Server.",
                "SecurityGroupIngress": [
                    {
                        "IpProtocol": "tcp",
                        "FromPort": 8300,
                        "ToPort": 8301,
                        "CidrIp": {
                            "Ref": "VpcCIDR"
                        }
                    },
                    {
                        "IpProtocol": "tcp",
                        "FromPort": 8500,
                        "ToPort": 8500,
                        "CidrIp": {
                            "Ref": "IngressLocation"
                        }
                    }
                ]
            }
        },
        "VaultSecurityGroup": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "VpcId": {
                    "Ref": "VpcId"
                },
                "GroupDescription": "Security Group for Vault Server.",
                "SecurityGroupIngress": [
                    {
                        "IpProtocol": "tcp",
                        "FromPort": 8300,
                        "ToPort": 8300,
                        "CidrIp": {
                            "Ref": "VpcCIDR"
                        }
                    },
                    {
                        "IpProtocol": "tcp",
                        "FromPort": 8200,
                        "ToPort": 8200,
                        "CidrIp": {
                            "Ref": "VpcCIDR"
                        }
                    },
                    {
                        "IpProtocol": "tcp",
                        "FromPort": 8200,
                        "ToPort": 8200,
                        "CidrIp": {
                            "Ref": "IngressLocation"
                        }
                    }
                ]
            }
        },
        "VaultEIP": {
            "Type": "AWS::EC2::EIP",
            "Properties": {
                "Domain": "vpc",
                "InstanceId": {
                    "Ref": "VaultServerInstance"
                }
            }
        },
        "ConsulEIP": {
            "Type": "AWS::EC2::EIP",
            "Properties": {
                "Domain": "vpc",
                "InstanceId": {
                    "Ref": "ConsulServerInstance"
                }
            }
        },
        "InstanceSSMAccessRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "Path": "/",
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "ec2.amazonaws.com"
                                ]
                            },
                            "Action": [
                                "sts:AssumeRole"
                            ]
                        }
                    ]
                },
                "ManagedPolicyArns": [
                    "arn:aws:iam::aws:policy/AmazonSSMManagedInstanceCore"
                ],
                "Policies": [
                    {
                        "PolicyName": "ssm-start-stop",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "ssm:StartSession",
                                        "ssm:ResumeSession",
                                        "ssm:TerminateSession",
                                        "ssm:DescribeSessions",
                                        "ssm:GetConnectionStatus",
                                        "ssm:DescribeInstances",
                                        "kms:GenerateDataKey"
                                    ],
                                    "Resource": "*"
                                }
                            ]
                        }
                    }
                ]
            }
        },
        "EC2InstanceProfile": {
            "Type": "AWS::IAM::InstanceProfile",
            "Properties": {
                "Path": "/",
                "Roles": [
                    {
                        "Ref": "InstanceSSMAccessRole"
                    }
                ]
            }
        }
    }
